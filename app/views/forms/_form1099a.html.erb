                                    <input class="abs" style="top: 49%;left: 1%;width: 45%;height:10%;border:1px solid black" name="borrowers_name" value="<%= @form_fields['borrowers_name']%>" type="text">
                                    
<input type="text" readonly class="datepicker abs" name="1" value="<%= @form_fields['1']%>" style="top: 38%;left: 47%;width: 18%;height:6%;border:1px solid black">


                                    <input class="abs" style="top: 38%;left: 68%;width: 16%;height:6%;border:1px solid black" name="2" value="<%= @form_fields['2']%>" type="text">
