<div class="row">
                          <div class="rel col-lg-12">
                             
                             <form id="form1" action="/form/save">
                        <!-- Label part -->
                            <div id="label-container">
                              Label:
                              <%= select_tag(:label, options_for_select(@labels,@form_fields['label']),{id: "label", class: "form-control"} )%>
                              <div  id="label-other-container"> Please enter a new label and choose color:&nbsp;&nbsp;
                                  <div class="input-group">
                                    <input id="label-other"  class ="form-control" type="text" name="label_other" value="">
                                    <div class="input-group input-append color" data-color="rgb(213,215,219)" data-color-format="rgb" id="cp4">
                                        <input type="text" class="form-control"  aria-describedby="basic-addon1" value="rgb(213,215,219)" name="label_color" readonly="readonly">
                                        <span class=" add-on input-group-addon"><i style="background-color: rgb(213,215,219);"></i></span>
                                    </div>
                                  </div>
                              </div>
                            </div>
                            <div id="labels-colors">
                                <% @colors_array.each do |color| %>
                                <% if @form_fields['label'] == color[0] 
                                      @additional_style = ' display:block;' 
                                   else 
                                      @additional_style = ''
                                   end %>
                                <div style="background:<%= color[1] %>;<%= @additional_style %>" id="color-<%= color[0].delete(' ') %>" class="color-box"></div>
                                <% end %>
                            </div>
                            <div class="clear">&nbsp;</div>
                        <!-- end label parts -->  
                                <div id="fields-container" class="form1099s">
                                   <img width="100%" src="/media/1099s.png" />
                                    
                                    <!-- fields -->
                                    <input class="abs" style="top: 13%;left: 1%;width: 45%;height: 21%;" name="filers_name_address" value="" type="text">
                                    <input class="abs" name="filers_fid" value="" style="top: 39%;left: 1%;width: 22%;height: 5%;" type="text">
                                    <input class="abs" name="transferors_id" value="" style="top: 39%;left: 24%;width: 22%;height: 5%;" type="text">
                                    <input class="abs" name="transferors_name" value="" style="top: 49%;left: 1%;width: 45%;height: 10%;" type="text">
                                    <input class="abs" name="street_address" value="" style="top: 64%;left: 1%;width: 45%;height: 5%;" type="text">
                                    <input class="abs" name="city_town_state" value="" style="top: 74%;left: 1%;width: 45%;height: 5%;" type="text">
                                    <input class="abs" name="account_number" value="" style="top: 84%;left: 1%;width: 45%;height: 5%;" type="text">
                                    <input class="abs" style="top: 9%;left: 47%;width: 18%;height: 10%;" name="1" value="" type="text">
                                    <input class="abs" name="2" value="" style="top: 24%;left: 48.5%;width: 16.5%;height: 10%;" type="text">
                                    <input class="abs" name="3" value="" style="top: 39%;left: 47%;width: 37%;height: 15%;" type="text">
                                    <input class="abs" name="4" value="" style="" type="text">
                                    <input class="abs" name="5" value="" style="" type="text">
                                    <input class="abs" name="6" value="" style="top: 83.5%;left: 48.5%;width: 35.5%;height: 5%;" type="text">
                                  <!-- fields -->
                                    
                                    <input type="hidden" name="unique_id" value="<%= @form_fields['unique_id'] %>">
                                    <input type="hidden" name="form_id" value="1099s"> 
                                </div><!-- fields-container -->
                              </form>
                              
                          </div>
                          
                  </div>
                  <!-- /.row -->